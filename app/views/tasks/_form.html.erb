<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-field">
    <%= f.label :time %><br>
    <%= f.time_select :time %>
  </div>
  <div class="form-field">
    <%= f.select(:year_id, @years.collect {|y| [y.name, y.id]}, { include_blank: "Please Select a Year"}) %>
  </div>
  <div class="form-field">
    <%= f.select(:month_id, @months.collect {|m| [m.name, m.id]}, { include_blank: "Please Select a Month"}) %>
  </div>
  <div class="form-field">
    <%= f.select(:day_id, @days.collect {|d| [d.name, d.id]}, { include_blank: "Please Select a Day"}) %>
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
